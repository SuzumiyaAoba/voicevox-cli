{
  "name": "@suzumiyaaoba/voicevox-cli",
  "version": "0.1.0",
  "description": "CLI tool for running VOICEVOX synthesis",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "voicevox-cli": "dist/index.js"
  },
  "scripts": {
    "build": "vite build",
    "build:tsc": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --reporter=verbose",
    "test:no-docker": "vitest run --config vitest.config.no-docker.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:staged": "lint-staged",
    "docker:up": "docker-compose up -d voicevox-engine",
    "docker:up:proxy": "docker-compose --profile proxy up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f voicevox-engine",
    "docker:ps": "docker-compose ps",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.17"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "voicevox",
    "cli",
    "text-to-speech"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@total-typescript/ts-reset": "^0.6.1",
    "@tsconfig/strictest": "^2.0.6",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^24.5.2",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "neverthrow": "^8.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "biome check --write"
  },
  "dependencies": {
    "@suzumiyaaoba/voicevox-client": "^0.2.2",
    "adm-zip": "^0.5.16",
    "citty": "^0.1.6",
    "immer": "^10.1.3",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "remeda": "^2.32.0",
    "zod": "^4.1.11"
  }
}
