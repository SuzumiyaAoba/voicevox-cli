{
  "name": "voicebox-cli",
  "version": "0.1.0",
  "description": "CLI tool for running VOICEVOX synthesis",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "voicebox": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:staged": "lint-staged",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.17"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "voicevox",
    "cli",
    "text-to-speech"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@total-typescript/ts-reset": "^0.6.1",
    "@tsconfig/strictest": "^2.0.6",
    "@types/node": "^24.5.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "biome check --write"
  },
  "dependencies": {
    "cac": "^6.7.14"
  }
}
